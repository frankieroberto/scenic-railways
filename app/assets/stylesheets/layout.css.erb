
body {
  font-family: 'Gill Sans', sans-serif; font-size: 20px;
  background: url(<%= asset_path 'bedge_grunge.png' %>);

}

.site-header {
  text-align: center;
  margin: 2em 0 2em 0;

}

.site-name {
  font-size: 60px;
  color: black;
  text-decoration: none;
  color: #BF4D28;
  text-shadow: black  2px 2px 1px;
  margin: 0;
}

.tagline {
  font-size: 28px;
  margin: 0;
}


article {
  max-width: 40em;
  background-color: white;
  padding: 1.5em 2em 1.5em 2em;
  margin: 0 auto;
  border: 3px #777 solid;
}

a {
  color: black;
  text-decoration: none;
}

.station a,
.voi a {
  font-weight: normal;
  font-size: 28px;
}

.description {
  font-size: 18px;
  color: #777;
}

h1 {
  text-align: center;
  margin: 0 0 .5em 0;
}

h2 {
  margin: 0 0 .2em 0;
}

.meta {
  margin: .8em 0 0 2em;
}

p {
  margin: 0 0 1em 0;
}

h1 em {
  font-weight: normal;
}

.reverse {
  float: left;
  display: block;
  background-color: #B4CDCD;
  padding: .3em .6em;
  color: #FFF;
  font-size: 18px;
}